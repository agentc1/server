project Server_Starter is
   for Languages   use ("Ada");
   for Source_Dirs use ("src", "src_boundary");
   for Object_Dir  use "obj";
   for Exec_Dir    use "bin";
   for Main        use ("telnet_server.adb");

   package Builder is
      for Global_Configuration_Pragmas use "gnat.adc";
   end Builder;

   package Compiler is
      for Default_Switches ("Ada") use ("-gnat2012", "-gnatX", "-gnata", "-gnatec=gnat.adc");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");  -- Include stack traces
   end Binder;
end Server_Starter;
